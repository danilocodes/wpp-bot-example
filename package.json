{
    "name": "wpp-bot-example",
    "version": "1.0.0",
    "description": "A simple whatsapp bot that create stickers",
    "main": "dist/src/index.js",
    "scripts": {
        "test": "jest --watch --detectOpenHandles",
        "start": "node dist/src/index.js",
        "build": "rm -rf ./dist ||: && tsc",
        "postinstall": "npm run build",
        "prestart": "npm run build",
        "pretest": "npm run build",
        "style:check": "prettier --check 'src/**/*.ts'",
        "style:fix": "prettier --write 'src/**/*.ts'",
        "lint": "eslint --ext .ts ./src",
        "lint:fix": "eslint --fix --ext .ts ./src",
        "create:command": "mkdir ./src/handlers/commands/$npm_config_name && cat ./npm-create/Command.ts | sed s/PLACEHOLDER/$npm_config_name/g > ./src/handlers/commands/$npm_config_name/$npm_config_name.ts && cat ./npm-create/command.spec.ts | sed s/PLACEHOLDER/$npm_config_name/g > ./src/handlers/commands/$npm_config_name/$npm_config_name.spec.ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/danilocodes/wpp-bot-example.git"
    },
    "keywords": [
        "bot",
        "whatsapp",
        "automation"
    ],
    "author": "Danilo Rocha <danilo.rocha1@hotmail.com>",
    "license": "See LICENSE file",
    "bugs": {
        "url": "https://github.com/danilocodes/wpp-bot-example/issues"
    },
    "homepage": "https://github.com/danilocodes/wpp-bot-example#readme",
    "dependencies": {
        "@open-wa/wa-automate": "^4.54.6",
        "dotenv": "^16.0.3",
        "winston": "^3.8.2"
    },
    "devDependencies": {
        "@swc/core": "^1.3.25",
        "@swc/jest": "^0.2.24",
        "@types/jest": "^29.2.5",
        "@types/node": "^18.11.18",
        "@typescript-eslint/eslint-plugin": "^5.48.1",
        "@typescript-eslint/parser": "^5.48.1",
        "eslint": "^8.31.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^29.3.1",
        "prettier": "^2.8.2",
        "ts-node": "^10.9.1",
        "tsc-watch": "^6.0.0",
        "typescript": "^4.9.4"
    }
}
